@model Web.DBEntities.Category
@{
    ViewBag.Title = "編輯類別";
}

<h2>@ViewBag.Title</h2>


@using (Html.BeginForm("Edit", "Category", new { }, FormMethod.Post))
{
    @Html.HiddenFor(model => model.CategoryId)

    @Html.AntiForgeryToken()
    if (ViewData.ModelState.Any(x => x.Value.Errors.Any()))
    {
        @Html.ValidationSummary(false, "資料驗證錯誤訊息:", new { @class = "alert alert-danger" })
    }

    <div>
        <div class="form-group">
            @Html.LabelFor(x => x.CategoryName, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(x => x.CategoryName, new { htmlAttributes = new { @class = "form-control", placeholder = "請輸入類別名稱" } })
                @Html.ValidationMessageFor(model => model.CategoryName, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <div>
        <div class="form-group">
            @Html.LabelFor(x => x.Description, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(x => x.Description, new { htmlAttributes = new { @class = "form-control", placeholder = "請輸入類別名稱" } })
                @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>

    <input type="submit" class="btn btn-primary" value="送出" />
    @Html.ActionLink("返回", "Index", "Category", "", new { @class = "btn btn-default" })
}

@model List<Web.DBEntities.Category>

@Html.ActionLink("新增", "Create", "Category", new { }, new { @class = "btn btn-primary"})
<br />
<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>CategoryID</th>
            <th>CategoryName</th>
            <th>Description</th>
            <th>Editor</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.CategoryId</td>
                <td>@item.CategoryName</td>
                <td>@item.Description</td>
                <td><a href="@Url.Action("Edit","Category",new { id= @item.CategoryId})">Editor</a></td>
                <td><a href="@Url.Action("Delete","Category",new { id=@item.CategoryId})">Delete</a></td>
            </tr>
        }
    </tbody>
</table>
